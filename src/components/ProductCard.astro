---
import { Icon } from "astro-icon/components";

interface Props {
    // la estructura de los datos
    title: string;
    img: string;
    price: number;
}

const title = Astro.props.title;
const img = Astro.props.img;
const price = Astro.props.price;
---

<div>
    <img src={img} alt="" />

    <div>
        <h3></h3>
        <div class="mondongo">
            <p>{title}</p>
            <Icon name={"estrella"} />
        </div>
        <p>$ {price}</p>
        <button>comprar</button>
    </div>
</div>

<style>
    img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    button {
        background-color: rgb(0, 0, 0);
        color: rgb(235, 235, 235);
        padding: 7px 20px;
        border-radius: 7px;
        border: solid 2px rgb(0, 0, 0);
    }
    .mondongo {
        display:flex;
        align-items: center;
        justify-content: space-between;
        padding: 3%;
    }

    img:hover {
        opacity: .4;
    }
</style>




